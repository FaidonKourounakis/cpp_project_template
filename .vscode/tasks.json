{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "cpp: build executable from .o files",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${workspaceFolder}/bin/hello.o",
        "${workspaceFolder}/bin/main.o",
        "-o",
        "${workspaceFolder}/bin/program.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
